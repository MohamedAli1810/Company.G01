@model ResetPasswordDto
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
	<h1>Reset Password Form</h1>
	<div class="main-agileinfo">
		<div class="agileits-top">
			<div asp-validation-summary="All" class="text-danger"></div>
			<form asp-action="ResetPassword">
				<input class="text" asp-for="NewPassword" placeholder="New Password" required="">
				<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

				<input type="submit" value="Reset Password">
			</form>
			<p> <a asp-action="SignIn"> Login Now!</a></p>
		</div>
	</div>

