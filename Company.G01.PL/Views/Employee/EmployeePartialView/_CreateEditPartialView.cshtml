@model CreateEmployeeDto

@{
    var Departments = new SelectList(ViewData["departments"] as IEnumerable<Department> , "Id" , "Name");
}

<div class="my-3">
    <label asp-for="Name" class="col-from-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Age" class="col-from-label"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Email" class="col-from-label"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Address" class="col-from-label"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Phone" class="col-from-label"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>
<div class="my-3">
    <label asp-for="Salary" class="col-from-label"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="my-3">
    <input asp-for="IsActive" class="form-check" />
    <label asp-for="IsActive" class="col-from-label"></label>
</div>
<div class="my-3">
    <input asp-for="IsDeleted" class="form-check" />
